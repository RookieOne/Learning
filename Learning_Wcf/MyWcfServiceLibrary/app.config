      <service name="MyWcfServiceLibrary.Basic.BasicService">
        <endpoint address="http://localhost:8000/Basic/BasicService"
                  binding="basicHttpBinding"
                  bindingConfiguration=""
                  contract="MyWcfServiceLibrary.Basic.IBasicService" />
      </service>
    </services>
    <behaviors />
  </system.serviceModel>
</configuration>